---
kind: pipeline
name: default

platform:
  os: linux
  arch: amd64

steps:
- name: compile
  image: golang
  commands:
  - go test
  - go build

- name: build
  image: docker
  commands:
  - docker build .
  volumes:
  - name: sock
    path: /var/run/docker.sock

volumes:
- name: temp
  temp:
    medium: memory
- name: sock
  host:
    path: /var/run/docker.sock

depends_on:
- foo
- bar

...
