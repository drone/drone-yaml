---
kind: pipeline
name: default

platform:
  os: linux
  arch: amd64

steps:
- name: docker
  pull: default
  image: plugins/docker
  settings:
    repo: octocat/hello-world
  environment:
    docker_password:
      $secret: docker_password
    docker_username:
      $secret: docker_username

---
kind: secret
type: external
data:
  docker_password: secret/docker/password
  docker_username: secret/docker/username

...
